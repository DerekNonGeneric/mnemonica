{
  "name": "mnemonica",
  "version": "0.9.99777",
  "description": "abstract technique that aids information retention : instance inheritance system",
  "type": "commonjs",
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./module": {
      "import": "./module/index.js",
      "browser": "./module/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js"
    }
  },
  "files": [
    "README.md",
    "LICENSE",
    "module",
    "build"
  ],
  "directories": {
    "build": "build/",
    "module": "module/"
  },
  "contributors": [
    "laplandin <laplandin.denis@gmail.com>",
    "petrgrishin <iam@petrgrishin.com>",
    "Mobydack <devzetsubou@gmail.com>"
  ],
  "scripts": {
    "build": "rm -rf ./build && npx tsc --pretty --project tsconfig.json && npm run lint:src && npm run lint:test",
    "example": "npm run build && node ./test/example.js",
    "example:ts": "npx tsc ./test-ts/*.ts && npx eslint --fix ./test-ts/*.js && node ./test-ts/test-no-types.js && node ./test-ts/test-with-types.js",
    "deopt": "node --trace-deopt --trace-opt ./node_modules/mocha/bin/mocha.js ./test/index.js",
    "lint": "npx eslint",
    "lint:src": "npx eslint --fix ./src",
    "lint:test": "npx eslint --fix ./test",
    "decorate": "npx tsc --target es6 --moduleResolution NodeNext --module NodeNext --sourceMap ./test/decorate.ts",
    "test": "mocha --allow-uncaught --enable-source-maps test/index.js",
    "test:cov": "npm run build && nyc --reporter=text-summary --reporter=lcov mocha --allow-uncaught --enable-source-maps --ui bdd --reporter spec ./test/index.js",
    "test:debug": "npx tsc --pretty --project tsconfig.json && npx mocha --allow-uncaught --enable-source-maps --reporter spec --inspect-brk test/index",
    "test:jest": "npx jest",
    "test:jest:cov": "npx jest --collectCoverage",
    "test:jest:debug": "npx --node-options=--inspect-brk jest",
    "test:mjs": "npm run build && node --experimental-modules ./test/test.mjs",
    "watch": "npx tsc --pretty --project tsconfig.json -w",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wentout/mnemonica.git"
  },
  "keywords": [
    "ETL",
    "DFD",
    "inheritance",
    "mnemonica"
  ],
  "author": "went.out@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wentout/mnemonica/issues"
  },
  "homepage": "https://github.com/wentout/mnemonica#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-no-arrow-this": "^1.2.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "json5": "^2.2.3",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^17.1.0",
    "oxlint": "^1.39.0",
    "ts-jest": "^29.4.6",
    "typeomatica": "^0.3.55",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16 <24"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
